{
  "name": "mtn-ts-wrapper",
  "version": "0.0.5",
  "description": "MTN Typescript Wrapper API",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "test": "jest --runInBand",
    "build": "node ./node_modules/typescript/bin/tsc"
  },
  "jest": {
    "globals": {
      "tsconfig": "tsconfig.json"
    },
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/mtn-ts-wrapper.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "author": "Saravana Perumal Shanmugam <perusworld@linux.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/mtn-ts-wrapper/issues"
  },
  "homepage": "https://github.com/perusworld/mtn-ts-wrapper",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.11",
    "@types/uuid": "^9.0.8",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "luxon": "^3.4.4",
    "mastercard-client-encryption": "^1.10.2",
    "mastercard-oauth1-signer": "^1.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  }
}
